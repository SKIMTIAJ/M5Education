<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/ActivityBackgroundtrythird"
    android:orientation="vertical"
    tools:context=".Activities.PostYoutubeVideoActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/YoutubeVideoHeadid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Youtube Video Url"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:layout_margin="30dp"/>

            <EditText
                android:id="@+id/YoutubeVideoUrlid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Put Youtube Video ID Here"
                android:layout_marginTop="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="20dp"
                android:textSize="20dp"
                android:background="@drawable/viewborder_a"/>

            <EditText
                android:id="@+id/YoutubeVideoTextid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Put Youtube Video Title here"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="20dp"
                android:textSize="20dp"
                android:background="@drawable/viewborder_a"/>

            <EditText
                android:id="@+id/YoutubeVideoDesid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Put Youtube Video Duration Here"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="20dp"
                android:textSize="20dp"
                android:background="@drawable/viewborder_a"/>

            <Button
                android:id="@+id/YoutubeVideoButtonid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:background="@drawable/buttonf"
                android:text="Save"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>


        </LinearLayout>

    </ScrollView>



</LinearLayout>