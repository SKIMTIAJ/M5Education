<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/School_image_layout"
            android:layout_weight="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/School_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/college_list_image_circle"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/School_text_layout"
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/School_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="School Name"
                    android:paddingLeft="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location :"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/School-Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textStyle="normal"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Affiliated :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/Scholarship_Affiliated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="School Affiliated"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Website :"
                    android:textColor="@color/ChooseQualifition"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/School_Website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"/>



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>

</LinearLayout>