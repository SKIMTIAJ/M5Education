<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Intermediate_gellery_ScrollView_for_Others"
    android:background="@color/ActivityBackgroundtrythird"
    android:orientation="vertical"
    tools:context=".Activities.OtherAfterIntermediate">

    <LinearLayout
        android:id="@+id/AfterIntermediate_Others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_weight="50"
            android:id="@+id/AfterIntermediate_Others_Head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textStyle="bold"
            android:textSize="28sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"/>


        <TextView
            android:id="@+id/AfterIntermediate_Others_Eligiblity_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/Eligible_For_Other_Activity_text"
            android:textStyle="italic"
            android:textSize="18sp"
            android:padding="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:id="@+id/AfterIntermediate_Othres_Designing_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:text="Designing"
                android:background="@drawable/buttonf"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/AfterIntermediate_Othres_flim_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:text="Flim Making"
                android:background="@drawable/buttonf"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:id="@+id/AfterIntermediate_Othres_Management_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:text="Management"
                android:background="@drawable/buttonf"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/Other_main_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">



        </ListView>

        <ListView
            android:id="@+id/Other_Designe_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">



        </ListView>

        <ListView
            android:id="@+id/Other_flim_making_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">



        </ListView>

        <ListView
            android:id="@+id/Other_Management_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">



        </ListView>

    </FrameLayout>

</LinearLayout>