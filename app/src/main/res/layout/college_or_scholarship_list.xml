<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/College_or_Scholarship_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/College_row_image_layout"
            android:layout_weight="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/College_or_Scholarship_image"
                android:background="@drawable/college_list_image_circle"
                android:src="@drawable/ic_school_black_24dp"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <!-- <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>-->

                <TextView
                    android:id="@+id/College_or_Scholarship_college_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="College Name"
                    android:paddingLeft="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/TitleColor"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="location :"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/College_or_Scholarship_college_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="location"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Affiliated :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/College_or_Scholarship_college_affiliated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Affiliated"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:textStyle="normal"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/College_or_Scholarship_college_PhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:textStyle="normal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/College_or_Scholarship_college_Website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:textColor="@color/ChooseQualifition"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:textStyle="normal"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/College_or_Scholarship_text_layout"
        android:layout_weight="40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium :"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/College_or_Scholarship_college_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textColor="#cc0000"
                android:textSize="15sp"
                android:paddingLeft="5dp"
                android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classes :"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/College_or_Scholarship_college_Classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classes"
                android:textColor="#c00"
                android:textSize="15sp"
                android:paddingLeft="5dp"
                android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating :"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/College_or_Scholarship_college_Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="15sp"
                android:drawableRight="@drawable/ic_star_black_24dp"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:textStyle="normal"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</LinearLayout>