<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/viewborder_a"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="Name :"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/NameOfCompExampAfIntermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="Name of"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Conducted By: "
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/ConductOfCompExampAfIntermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Conducted"
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="invented For :"
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

        <TextView
            android:id="@+id/InventionOfCompExampAfIntermediate"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="Application invented For"
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="Notification Month: "
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/NotificationOfCompExampAfIntermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="Notification Month"
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="Mode of selection :"
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

        <TextView
            android:id="@+id/ModeOfCompExampAfIntermediate"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="Mode of selection"
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="WebSite :"
            android:textColor="@color/ChooseQualifition"
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/WebOfCompExampAfIntermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="WebSite"
            android:textColor="@color/ChooseQualifition"
            android:layout_margin="2dp"
            android:paddingLeft="18dp" />

    </LinearLayout>






</LinearLayout>