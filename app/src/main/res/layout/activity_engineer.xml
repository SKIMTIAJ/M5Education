<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Intermediate_gellery_ScrollView_for_Engineering"
    android:orientation="vertical"
    android:background="@color/ActivityBackgroundtrythird"
    tools:context=".Activities.EngineerActivity">

    <LinearLayout
        android:id="@+id/AfterIntermediate_Engineering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/AfterIntermediate_EngineeringText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engineer"
            android:textStyle="bold"
            android:textSize="28sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"/>


        <TextView
            android:id="@+id/AfterIntermediate_Engineering_Degree_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B.Tech/B.E"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="@color/ChooseQualifition"/>

        <TextView
            android:id="@+id/AfterIntermediate_Engineering_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="18sp"
            android:padding="2sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:text=" 4 year" />


        <TextView
            android:id="@+id/AfterIntermediate_Engineering_Eligibility_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only Eligible"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="@color/ChooseQualifition"/>

        <TextView
            android:id="@+id/AfterIntermediate_Engineering_Eligibility_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Eligible_For_Eng_4thyear_text"
            android:textStyle="italic"
            android:textSize="18sp"
            android:padding="20dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:id="@+id/Engineering_List_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <ListView
            android:id="@+id/EngineerListone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</LinearLayout>